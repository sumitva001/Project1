<% layout('layouts/boilerplate') %>


    <div id="cluster-map" > </div>

    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campground</a>
    </div>
    <ul>
        <% for(let camp of campgrounds){%>




            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(camp.images.length){ %>
                            <img crossorigin="anonymous" class="img-fluid" src="<%= camp.images[0].url%>" alt="">
                            <% } else{ %>
                                <img crossorigin="anonymous" class="img-fluid"
                                    src="https://res.cloudinary.com/drhzsyckt/image/upload/v1689394176/YelpCamp/szzximclt8fqbrrhe0ws.jpg"
                                    alt="">
                                <% } %>

                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <!-- <h5 class="card-title">
                                <%- camp.properties.popUpMarkup%>
                            </h5> -->
                            <p class="card-text">
                                <%= camp.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= camp.location %>
                                </small>

                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>

                        </div>
                    </div>
                </div>

            </div>

            <% } %>
    </ul>
    <script>
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    </script>

    <script src="/javaScripts/clusterMaps.js"></script>